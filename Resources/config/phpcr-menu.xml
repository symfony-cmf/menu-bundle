<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symfony_cmf_menu.provider_class">Symfony\Cmf\Bundle\MenuBundle\Provider\PHPCRMenuProvider</parameter>
        <parameter key="symfony_cmf_menu.factory_class">Symfony\Cmf\Bundle\MenuBundle\ContentAwareFactory</parameter>
        <parameter key="symfony_cmf_menu.current_item_voter.uri_prefix_class">Symfony\Cmf\Bundle\MenuBundle\Voter\UriPrefixVoter</parameter>
        <parameter key="symfony_cmf_menu.current_item_voter.request_content_class">Symfony\Cmf\Bundle\MenuBundle\Voter\RequestContentIdentityVoter</parameter>
        <parameter key="symfony_cmf_menu.document_class">Symfony\Cmf\Bundle\MenuBundle\Document\MenuNode</parameter>
        <parameter key="symfony_cmf_menu.multilang.document_class">Symfony\Cmf\Bundle\MenuBundle\Document\MultilangMenuNode</parameter>
    </parameters>

    <services>

        <service id="symfony_cmf_menu.provider" class="%symfony_cmf_menu.provider_class%">
            <tag name="knp_menu.provider" />
            <argument type="service" id="service_container"/>
            <argument type="service" id="symfony_cmf_menu.factory"/>
            <argument>%symfony_cmf_menu.document_manager_name%</argument>
            <argument>%symfony_cmf_menu.menu_basepath%</argument>
        </service>

        <service id="symfony_cmf_menu.factory" class="%symfony_cmf_menu.factory_class%">
            <argument type="service" id="router"/>
            <argument/> <!-- content url generator -->
            <argument type="service" id="logger"/>
        </service>

        <service id="symfony_cmf_menu.initializer" class="Doctrine\Bundle\PHPCRBundle\Initializer\GenericInitializer">
            <argument type="collection">
                <argument>%symfony_cmf_menu.menu_basepath%</argument>
            </argument>
            <tag name="doctrine_phpcr.initializer" />
        </service>

        <service id="symfony_cmf_menu.listener.voters_request" class="Symfony\Cmf\Bundle\MenuBundle\EventListener\VoterInitializerListener">
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" />
        </service>

        <service id="symfony_cmf_menu.current_item_voter.uri_prefix" class="%symfony_cmf_menu.current_item_voter.uri_prefix_class%">
            <tag name="symfony_cmf_menu.voter" request="true"/>
        </service>

        <service id="symfony_cmf_menu.current_item_voter.request_content" class="%symfony_cmf_menu.current_item_voter.request_content_class%">
            <argument>%symfony_cmf_menu.content_key%</argument>
            <tag name="symfony_cmf_menu.voter" request="true"/>
        </service>

    </services>

</container>
