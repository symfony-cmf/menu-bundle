<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symfony_cmf_menu.admin_class">Symfony\Cmf\Bundle\MenuBundle\Admin\MenuNodeAdmin</parameter>
        <parameter key="symfony_cmf_menu.minimal.admin_class">Symfony\Cmf\Bundle\MenuBundle\Admin\MinimalMenuAdmin</parameter>
    </parameters>

    <services>
        <service id="symfony_cmf_menu.admin" class="%symfony_cmf_menu.admin_class%">
            <tag name="sonata.admin" manager_type="doctrine_phpcr" group="dashboard.group_menu" label_catalogue="SymfonyCmfMenuBundle" label="dashboard.label_menu_node" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>%symfony_cmf_menu.document_class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setContentRoot">
                <argument>%symfony_cmf_menu.content_basepath%</argument>
            </call>

            <call method="setMenuRoot">
                <argument>%symfony_cmf_menu.menu_basepath%</argument>
            </call>

        </service>

        <service id="symfony_cmf_menu.minimal.admin" class="%symfony_cmf_menu.minimal.admin_class%">
            <tag name="sonata.admin" manager_type="doctrine_phpcr" group="dashboard.group_menu" label_catalogue="SymfonyCmfMenuBundle" label="dashboard.label_multilang_menu_node" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>%symfony_cmf_menu.multilang.document_class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setMenuRoot">
                <argument>%symfony_cmf_menu.menu_basepath%</argument>
            </call>

        </service>
    </services>

</container>
